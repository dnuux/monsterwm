pkgname=monsterstatus
pkgver=20120825
pkgrel=1
pkgdesc="Very minimal, lightweight status tool"
arch=('i686' 'x86_64')
license=('MIT')
groups=('modified')
depends=('glibc')
source=("Makefile"
        "monsterstatus.c")

build() {
  cd "${srcdir}"
  make
}

package() {
  cd "${srcdir}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
