pkgname=monsterstatus
pkgver=20120918
pkgrel=1
pkgdesc="Very minimal, lightweight status tool"
url="https://github.com/dnuux/monsterwm"
arch=('i686' 'x86_64')
license=('WTFPL')
depends=('glibc')
source=("Makefile"
        "monsterstatus.c")
md5sums=('450743c79b2526525ceb486278ae99c3'
         '4b2dce8f76612a686a0655a6c749a0c6')

build() {
  cd "${srcdir}"
  make
}

package() {
  cd "${srcdir}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
