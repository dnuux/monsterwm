# Maintained by dnuux <dnuuxx@gmail.com>
pkgname=monsterpager
pkgver=20120902
pkgrel=1
pkgdesc="Very minimal, lightweight pager for monsterwm"
arch=('i686' 'x86_64')
license=('WTFPL')
depends=('glibc')
source=("Makefile"
        "monsterpager.c")

build() {
  cd "${srcdir}"
  make
}

package() {
  cd "${srcdir}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
